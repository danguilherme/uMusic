<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ventura.lyricsfinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-feature />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MusicInfoActivity"
            android:label="@string/title_activity_music_info" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="audio/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="audio/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.BindLyricsActivity"
            android:label="@string/title_activity_bind_lyrics" >
            <intent-filter android:label="Z-Lyr" >
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />

                <data android:mimeType="audio/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".discogs.ui.ArtistViewerActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_artist_viewer" >
        </activity>
        <activity
            android:name=".discogs.ui.ReleasesViewerActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_releases_viewer" >
        </activity>
        <activity
            android:name=".oauth.PrepareRequestTokenActivity"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="lyricsfinder-app" />
            </intent-filter>
        </activity>
        <activity
            android:name=".discogs.ui.ListArtistsActivity"
            android:configChanges="orientation" >
            
            <intent-filter>
            <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!-- LyrDB-related activities -->
        <activity
            android:name=".lyrdb.ui.ListLyricsActivity"
            android:configChanges="orientation" >
        </activity>
        <activity
            android:name=".lyrdb.ui.LyricsViewerActivity"
            android:configChanges="orientation" >
        </activity>
        <activity
            android:name=".musixmatch.ui.LyricsViewerActivity"
            android:configChanges="orientation" >
        </activity>
    </application>

</manifest>