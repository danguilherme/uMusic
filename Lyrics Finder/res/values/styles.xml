<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light"></style>

    <style name="LyricFilter" parent="android:Theme.Light">
        <item name="android:textColor">#008</item>
    </style>

    <style name="Lyric" parent="android:Theme.Light">
        <item name="android:textStyle">italic</item>        <item name="android:background">#000</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Labels" parent="android:Theme.Light">
        <item name="android:background">#000</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- Music Info Activity -->
    <style name="MusicInfoTextField">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>

    <style name="MusicInfoTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MusicInfoLinearLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10sp</item>
    </style>

    
    <!-- Artist Info -->
    <style name="scroll_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#000</item>
    </style>
    
    <style name="list_button" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/rounded_borders</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    
    <!-- ALL NEW -->
    <style name="Title" parent="android:Theme.Light">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="Text12" parent="android:Theme.Light">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="Text12Bold" parent="Text12">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text16" parent="android:Theme.Light">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="Text16Bold" parent="Text16">
        <item name="android:textStyle">bold</item>
    </style>

</resources>