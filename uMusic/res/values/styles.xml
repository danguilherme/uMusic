<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light"></style>

    <style name="LyricFilter" parent="android:Theme.Light">
        <item name="android:textColor">#008</item>
    </style>

    <style name="Lyric" parent="android:Theme.Light">
        <item name="android:textStyle">italic</item>
        <item name="android:background">#000</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Labels" parent="android:Theme.Light">
        <item name="android:background">#000</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- Music Info Activity -->
    <style name="MusicInfoTextField">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>

    <style name="MusicInfoTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MusicInfoLinearLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10sp</item>
    </style>

    <!-- Artist Info -->
    <style name="scroll_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#000</item>
    </style>

    <!-- ALL NEW -->
    <style name="Background" parent="android:Theme.Light">
        <item name="android:background">#dfdfdf</item>
    </style>
    <!-- android:Theme.Light -->
    <style name="text" parent="@style/Theme.Blue">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text.micro">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text.micro.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text.small.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.medium.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Specific Styles -->
    <style name="Title" parent="android:Theme.Light">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CategoryTitle" parent="text.medium"></style>

    <style name="DashboardButtons" parent="text.medium.bold">
        <item name="android:textColor">@color/dashboard_buttons_color</item>
    </style>

</resources>